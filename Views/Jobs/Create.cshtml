@model Job

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Post a New Job</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-controller="Jobs" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="form-group mb-4">
                            <label asp-for="Title" class="form-label fw-bold">Job Title</label>
                            <input asp-for="Title" class="form-control form-control-lg" placeholder="Enter job title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="CompanyName" class="form-label fw-bold">Company Name</label>
                            <input asp-for="CompanyName" class="form-control" placeholder="Enter company name" />
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Location" class="form-label fw-bold">Location</label>
                                    <input asp-for="Location" class="form-control" placeholder="Enter job location" />
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="JobType" class="form-label fw-bold">Job Type</label>
                                    <select asp-for="JobType" class="form-select">
                                        <option value="">Select job type</option>
                                        <option value="Full-time">Full-time</option>
                                        <option value="Part-time">Part-time</option>
                                        <option value="Contract">Contract</option>
                                        <option value="Internship">Internship</option>
                                    </select>
                                    <span asp-validation-for="JobType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Salary" class="form-label fw-bold">Salary</label>
                                    <input asp-for="Salary" class="form-control" placeholder="Enter salary range" />
                                    <span asp-validation-for="Salary" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ExperienceRequired" class="form-label fw-bold">Experience Required</label>
                                    <input asp-for="ExperienceRequired" class="form-control" placeholder="e.g. 2+ years" />
                                    <span asp-validation-for="ExperienceRequired" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Description" class="form-label fw-bold">Job Description</label>
                            <textarea asp-for="Description" class="form-control" 
                                    rows="8" placeholder="Enter detailed job description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus-circle me-2"></i>Create Job
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('#Description').on('focus', function() {
                $(this).addClass('focused');
            }).on('blur', function() {
                $(this).removeClass('focused');
            });
        });
    </script>
}

<style>
    .form-control:focus {
        border-color: #80bdff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    .focused {
        min-height: 200px;
        transition: min-height 0.3s ease;
    }

    .card {
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .btn {
        border-radius: 5px;
        transition: all 0.3s ease;
    }

    .btn:hover {
        transform: translateY(-1px);
    }

    .form-label {
        color: #495057;
    }

    .form-control, .form-select {
        padding: 0.75rem 1rem;
        font-size: 1rem;
        border-radius: 0.5rem;
        border: 1px solid #ced4da;
    }

    .form-control::placeholder {
        color: #adb5bd;
    }
</style> 