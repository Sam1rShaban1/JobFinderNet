@model JobFinderNet.Models.Job

<!DOCTYPE html>
<html>
<head>
    <title>Job Detailssss</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .job-card {
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
            border-radius: 10px;
            border: none;
        }
        .job-header {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 10px 10px 0 0;
            border-bottom: 1px solid #eee;
        }
        .job-body {
            padding: 25px;
        }
        .info-item {
            margin-bottom: 15px;
            color: #666;
        }
        .info-item i {
            width: 25px;
            color: #0d6efd;
        }
        .apply-button {
            padding: 10px 30px;
            font-weight: 500;
        }
        .badge-custom {
            font-size: 0.9em;
            padding: 8px 15px;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container mt-5">
        @if (Model == null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle me-2"></i>
                <p>Model is null!</p>
            </div>
        }
        else
        {
            <div class="card job-card">
                <div class="job-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">@Model.Title</h2>
                        <span class="badge bg-primary badge-custom">
                            <i class="fas fa-briefcase me-1"></i>
                            @Model.JobType
                        </span>
                    </div>
                </div>
                <div class="job-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="info-item">
                                <i class="fas fa-building me-2"></i>
                                <strong>Company:</strong> @Model.CompanyName
                            </div>
                            <div class="info-item">
                                <i class="fas fa-map-marker-alt me-2"></i>
                                <strong>Location:</strong> @Model.Location
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Salary))
                            {
                                <div class="info-item">
                                    <i class="fas fa-money-bill-wave me-2"></i>
                                    <strong>Salary:</strong> @Model.Salary
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.ExperienceRequired))
                            {
                                <div class="info-item">
                                    <i class="fas fa-user-clock me-2"></i>
                                    <strong>Experience:</strong> @Model.ExperienceRequired
                                </div>
                            }
                        </div>
                        <div class="col-md-4">
                            <div class="d-grid gap-2">
                                <button class="btn btn-primary apply-button">
                                    <i class="fas fa-paper-plane me-2"></i>
                                    Apply Now
                                </button>
                                <button class="btn btn-outline-primary">
                                    <i class="far fa-bookmark me-2"></i>
                                    Save Job
                                </button>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="mt-4">
                            <h4 class="mb-3">Job Description</h4>
                            <div class="card">
                                <div class="card-body">
                                    @Html.Raw(Model.Description)
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 