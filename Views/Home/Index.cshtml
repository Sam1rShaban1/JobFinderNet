@{
    ViewData["Title"] = "Welcome to JobFinderNet";
}

<!-- Hero Section -->
<div class="hero-section text-center py-5 mb-5">
    <div class="container">
        <h1 class="display-3 fw-bold mb-4">Find Your Dream Job</h1>
        <p class="lead mb-4">Connect with top employers and discover opportunities that match your skills and aspirations</p>
        <div class="search-box bg-white p-4 rounded-4 shadow-sm mx-auto" style="max-width: 700px;">
            <form class="row g-3">
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0">
                            <i class="fas fa-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" placeholder="Job title or keyword">
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0">
                            <i class="fas fa-map-marker-alt text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0" placeholder="Location">
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Search</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container mb-5">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-briefcase fa-2x text-primary"></i>
                    </div>
                    <h3 class="h5 mb-3">Latest Jobs</h3>
                    <p class="text-muted mb-4">Browse through thousands of job opportunities updated daily</p>
                    <a href="@Url.Action("Index", "Jobs")" class="btn btn-outline-primary">Browse Jobs</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-user-tie fa-2x text-primary"></i>
                    </div>
                    <h3 class="h5 mb-3">Career Resources</h3>
                    <p class="text-muted mb-4">Access tools and guides to help advance your career</p>
                    <a href="#" class="btn btn-outline-primary">Learn More</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-chart-line fa-2x text-primary"></i>
                    </div>
                    <h3 class="h5 mb-3">Track Progress</h3>
                    <p class="text-muted mb-4">Monitor your applications and interview status</p>
                    <a href="@Url.Action("MyApplications", "Applications")" class="btn btn-outline-primary">View Applications</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="bg-light py-5 mb-5">
    <div class="container">
        <div class="row text-center g-4">
            <div class="col-md-3 col-6">
                <h2 class="display-4 fw-bold text-primary mb-2">500+</h2>
                <p class="text-muted">Active Jobs</p>
            </div>
            <div class="col-md-3 col-6">
                <h2 class="display-4 fw-bold text-primary mb-2">1000+</h2>
                <p class="text-muted">Companies</p>
            </div>
            <div class="col-md-3 col-6">
                <h2 class="display-4 fw-bold text-primary mb-2">2M+</h2>
                <p class="text-muted">Job Seekers</p>
            </div>
            <div class="col-md-3 col-6">
                <h2 class="display-4 fw-bold text-primary mb-2">98%</h2>
                <p class="text-muted">Success Rate</p>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .hero-section {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            padding: 80px 0;
            margin-top: -1rem;
        }

        .search-box {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
        }

        .hover-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 15px;
        }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

        .feature-icon {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            background: rgba(13, 110, 253, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
        }

        .input-group-text {
            border-right: none;
        }

        .form-control:focus {
            box-shadow: none;
            border-color: #ced4da;
        }

        .input-group:focus-within {
            box-shadow: 0 0 0 0.25rem rgba(13,110,253,.25);
            border-radius: 5px;
        }

        @@media (max-width: 768px) {
            .hero-section {
                padding: 40px 0;
            }
            
            .display-3 {
                font-size: 2.5rem;
            }
            
            .display-4 {
                font-size: 2rem;
            }
        }
    </style>
}
